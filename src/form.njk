<main id="main" class="[ main ][ page ]" tabindex="-1" aria-live="polite">
  <nav class="page__content page__content--bleed">
    <ul role="list" class="tabs">
      <li><a class="tabs__tab" href="/">Text</a></li>
      <li><a class="tabs__tab tabs__tab--active" href="/form">Form</a></li>
      <li><a class="tabs__tab" href="/cards">Cards</a></li>
